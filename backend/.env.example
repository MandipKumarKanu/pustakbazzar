# MongoDB Connection
MONGO_URI=your_mongodb_connection_string

# Server Port
PORT=8000

# Comma-separated list of allowed client URLs for CORS
CLIENT_URLS=http://localhost:5173,https://your-production-client.com,http://localhost:8089

# JWT Secrets
ACCESS_TOKEN_SECRET=your_access_token_secret_key
REFRESH_TOKEN_SECRET=your_refresh_token_secret_key

# Google OAuth Credentials
GOOGLE_CLIENT_ID=your_google_client_id
# Note: Google Client Secret is typically not needed directly in backend if using token verification from client,
# but if server-side flow is used for other Google APIs, it might be needed.

# Nodemailer Configuration (for sending emails)
EMAIL_HOST=your_email_host
EMAIL_PORT=your_email_port
EMAIL_USER=your_email_user
EMAIL_PASSWORD=your_email_password
EMAIL_SENDER="PustakBazzar <your_sender_email@example.com>"

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret # For verifying Stripe webhook events

# Gemini API Key (for AI features)
GEMINI_API_KEY=your_gemini_api_key

# Password Salt for Google default password
PASSWORD_SALT=random_salt_for_google_signup_passwords